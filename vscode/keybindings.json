// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "f2",
        "command": "workbench.action.files.save"
    },
    {
        "key": "shift+f6",
        "command": "editor.action.save",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.tasks.runTask"
    },
    {
        "key": "ctrl+shift+j",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+k",
        "command": "editor.action.copyLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+right",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "alt+left",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        "key": "alt+t",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    // VIM
    {
        "key": "ctrl+r",
        "command": "extension.vim_ctrl+r"
    },
    {
        "key": "ctrl+u",
        "command": "cursorPageUp",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+d",
        "command": "cursorPageDown",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+o",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+i",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "ctrl+w v",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.focusNextEditor"
    },
    {
        "key": "ctrl+w l",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "ctrl+w k",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+w j",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+w h",
        "command": "workbench.action.focusPreviousGroup"
    },
    {
        "key": "ctrl+w shift+h",
        "command": "workbench.action.moveEditorToPreviousGroup"
    },
    {
        "key": "ctrl+w shift+l",
        "command": "workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+w c",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+w o",
        "command": "workbench.action.closeOtherEditors",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+w ctrl+o",
        "command": "workbench.action.closeEditorsInOtherGroups",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+w r",
        "command": "workbench.action.closeEditorsToTheRight",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+w ctrl+c",
        "command": "workbench.action.closeAllEditors",
        "when": "editorFocus"
    },
    {
        "key": "shift+8",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    // remove ctrl+r bindings
    {
        "key": "ctrl+r",
        "command": "-workbench.action.openRecent"
    },
    {
        "key": "ctrl+r l",
        "command": "-npm-script.showOutput"
    },
    {
        "key": "ctrl+r shift+r",
        "command": "-npm-script.run"
    },
    {
        "key": "ctrl+r r",
        "command": "-npm-script.rerun-last-script"
    },
    {
        "key": "ctrl+r shift+x",
        "command": "-npm-script.terminate-script"
    },
    {
        "key": "ctrl+r t",
        "command": "-npm-script.test"
    }
]