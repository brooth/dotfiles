// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 14,
    "editor.fontFamily": "ubuntu mono",
    "window.zoomLevel": 0.0,
    "editor.rulers": [
        100
    ],
    "editor.renderIndentGuides": false,
    "editor.lineNumbers": "relative",

    //Vim
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": false,
    "vim.autoindent": true,
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.incsearch": true,
    "vim.scroll": 10,
    "vim.smartcase": true,

    // Local History
    "local-history.daysLimit": 1
    //"local-history.path": "./.vscode" // Specify another location for .history folder (null: use workspaceRoot)
}